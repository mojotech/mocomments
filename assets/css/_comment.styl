active-color = rgb(40, 186, 0)
.comment-link
  color inherit
  text-decoration none
  margin-right .4em
  font-size 0.8rem
  &.save-link
    margin-left 34px
    color active-color
  &:hover
    color active-color

.comment-entry
  margin-right 20px

.comment
  font-size 14px
  margin 8px 0px
  border-top #efefef solid 1px

.comment-info
  height 30px

.comment-author-name, .comment-photo
  display inline-block
  vertical-align middle

.comment-photo
  margin-right 7px
  width 26px
  height 26px
  border-radius 50%

.comment-body
  font-size 13px
  margin-left 13%

.input-comment
  border none
  outline none
  resize none
