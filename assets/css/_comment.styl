active-color = rgb(40, 186, 0)


.mc-indicated
  position relative
  padding-right 30px

.mc-indicated
  .indicator
    cursor pointer
    display none
    width 30px
    height 30px
    text-align center
    line-height 30px
    position absolute
    top 0
    right 0
    background-color #efefef
    border-radius 4px
  &:hover
    .indicator
      display block

.comment-link
  color inherit
  text-decoration none
  margin-right .4em
  font-size 0.8rem
  &.save-link
    margin-left 34px
    color active-color
  &:hover
    color active-color

.comment-entry
  margin-right 20px

.comment
  font-size 14px
  margin 8px 0px
  border-top #efefef solid 1px

.comment-info
  height 30px

.comment-author-name, .comment-photo
  display inline-block
  vertical-align middle

.comment-photo
  margin-right 7px
  width 26px
  height 26px
  border-radius 50%

.comment-body
  font-size 13px
  margin-left 13%

.input-comment
  border none
  outline none
  resize none
